<Application x:Class="GreatOptionTrader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GreatOptionTrader"
             xmlns:vm="clr-namespace:GreatOptionTrader.ViewModels"
             xmlns:models="clr-namespace:GreatOptionTrader.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:enums="clr-namespace:Core;assembly=Core"
             xmlns:core="clr-namespace:Core;assembly=Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="BaseStyleValues.xaml" />
                <ResourceDictionary Source="StreatchedExpanderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ObjectDataProvider x:Key="TradeDirectionToItemSource" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:TradeDirection"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <DataTemplate DataType="{x:Type vm:OptionStrategyViewModel}">
                <UniformGrid Rows="1">
                    <TextBlock Text="{Binding Instrument.Name}" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Position.CurrentVolume}" TextAlignment="Right"/>
                    <TextBlock Text="{Binding Position.CurrencyOpenPnL}" TextAlignment="Right"/>
                </UniformGrid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:OptionStrategyContainerViewModel}">
                <Expander Style="{StaticResource StreatchedExpanderStyle}">
                    <Expander.Header>
                        <UniformGrid Rows="1" Grid.Row="0">
                            <TextBlock Text="{Binding Container.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CurrencyOpenPnL}" TextAlignment="Right"/>
                        </UniformGrid>
                    </Expander.Header>
                    <Expander.Content>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding Instruments}"/>
                    </Expander.Content>
                </Expander>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
