<Application x:Class="GreatOptionTrader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GreatOptionTrader"
             xmlns:vm="clr-namespace:GreatOptionTrader.ViewModels"
             xmlns:models="clr-namespace:GreatOptionTrader.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:enums="clr-namespace:Core;assembly=Core"
             xmlns:core="clr-namespace:Core;assembly=Core">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ConvertersDictionary.xaml" />
                <ResourceDictionary Source="BaseStyleValues.xaml" />
                <ResourceDictionary Source="StreatchedExpanderStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <ObjectDataProvider x:Key="TradeDirectionToItemSource" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="enums:TradeDirection"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <Style TargetType="TextBlock">
                <Setter Property="Padding" Value="4,4,4,4"/>
            </Style>
            
            <DataTemplate DataType="{x:Type vm:OptionStrategyViewModel}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding Instrument.Name}" FontWeight="SemiBold"/>
                    
                    <UniformGrid Grid.Column="2" Rows="1">
                        <TextBlock Text="{Binding BidPrice}" TextAlignment="Right" FontStyle="Italic"/>
                        <TextBlock Text="{Binding AskPrice}" TextAlignment="Right" FontStyle="Italic"/>
                    </UniformGrid>
                    
                    <TextBlock Grid.Column="3" Text="{Binding Position.CurrentVolume}" TextAlignment="Right"/>
                    <TextBlock Grid.Column="4" Text="{Binding Position.AverageFilledPrice}" TextAlignment="Right"/>
                    <TextBlock Grid.Column="5" Text="{Binding Position.CurrencyOpenPnL}"
                               Background="{Binding Position.CurrencyOpenPnL, Converter={StaticResource PnLToBrushConv}}"
                               FontWeight="SemiBold"
                               TextAlignment="Right"/>
                    
                    <TextBlock Grid.Column="6" Text="{Binding Position.CurrencyFixedPnL}"
                            Background="{Binding Position.CurrencyFixedPnL, Converter={StaticResource PnLToBrushConv}}"
                            TextAlignment="Right"/>
                </Grid>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:OptionStrategyContainerViewModel}">
                <Expander Style="{StaticResource StreatchedExpanderStyle}"
                          BorderBrush="{Binding IsStarted, Converter={StaticResource IsStrartedConv}}"
                          BorderThickness="4, 0, 0, 0"
                          Padding="4,0,0,0">
                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Container.Name}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="{Binding Instrument.Name}"
                                       TextAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="{Binding Position.CurrentVolume}"
                                       TextAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="{Binding Position.AverageFilledPrice}"
                                       TextAlignment="Right"/>
                            <TextBlock Grid.Column="4" Text="{Binding CurrencyOpenPnL}"
                                       Background="{Binding CurrencyOpenPnL, Converter={StaticResource PnLToBrushConv}}"
                                       TextAlignment="Right"
                                       FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="5" Text="{Binding CurrencyTotalPnL}"
                                       Background="{Binding CurrencyTotalPnL, Converter={StaticResource PnLToBrushConv}}"
                                       TextAlignment="Right"
                                       FontWeight="SemiBold"/>
                        </Grid>
                    </Expander.Header>
                    <Expander.Content>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding OptionStrategies}"/>
                    </Expander.Content>
                </Expander>
            </DataTemplate>

            <DataTemplate DataType="{x:Type core:Option}">
                <UniformGrid Rows="1">
                    <TextBlock Text="{Binding Name}"/>
                    <TextBlock Text="{Binding Exchange}"/>
                    <TextBlock Text="{Binding ExpirationDate, StringFormat=dd.MMM.dd,ConverterCulture=RU-ru}"/>
                </UniformGrid>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
