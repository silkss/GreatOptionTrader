<Window x:Class="GreatOptionTrader.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreatOptionTrader"
        xmlns:dtos="clr-namespace:GreatOptionTrader.DTO"
        xmlns:convs="clr-namespace:GreatOptionTrader.Converters"
        
        mc:Ignorable="d"
        Title="Greate Option Trader" Height="450" Width="800">
    <Window.Resources>
        <convs:InstrumentToGroupDTOConverter x:Key="InstrumentToGroupDTOConverter"/>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Connector">
                <MenuItem Header="Connect" Command="{Binding Connect}"/>
            </MenuItem>
            <MenuItem Header="Группы">
                <MenuItem Header="создать" Command="{Binding CreateGroup}"/>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <DataGrid 
                IsReadOnly="True"
                x:Name="dgInstrumentGroups"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Groups}"
                Grid.Column="0">
                <DataGrid.Columns>
                    
                    <DataGridTextColumn
                        Header="id"
                        Width="0.5*"
                        Binding="{Binding Id}"/>
                    
                    <DataGridTextColumn 
                        Header="name"
                        Width="1*"
                        Binding="{Binding Name}"/>
                    
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="42"/>
                </Grid.RowDefinitions>
                <DataGrid
                    Grid.Column="1"
                    ItemsSource="{Binding Instruments}"
                    IsReadOnly="True"
                    AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Header="name"
                            Binding="{Binding Name}"
                            Width="1*"/>
                        <DataGridTextColumn
                            Header="expiration"
                            Binding="{Binding ExpirationDate, StringFormat=D, ConverterCulture=RU-ru}"
                            Width="1*"/>
                        <DataGridTextColumn
                            Header="bid"
                            Binding="{Binding Bid}"
                            Width=".5*"/>
                        <DataGridTextColumn
                            Header="ask"
                            Binding="{Binding Ask}"
                            Width=".5*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Style="{StaticResource BaseTextBoxStyle}"
                        x:Name="tbName"/>
                    <TextBox 
                        Grid.Column="1"
                        Style="{StaticResource BaseTextBoxStyle}"
                        x:Name="tbExchange"/>
                    <Button
                        Grid.Column="2"
                        Style="{StaticResource BaseButtonStyle}"
                        Command="{Binding AddInstrumentToGroup}"
                        Content="add">
                        <Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource InstrumentToGroupDTOConverter}">
                                <Binding ElementName="dgInstrumentGroups" Path="SelectedItem"/>
                                <Binding ElementName="tbName" Path="Text"/>
                                <Binding ElementName="tbExchange" Path="Text"/>
                            </MultiBinding>
                        </Button.CommandParameter>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
