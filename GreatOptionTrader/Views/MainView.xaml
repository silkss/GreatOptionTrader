<Window x:Class="GreatOptionTrader.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreatOptionTrader"
        
        mc:Ignorable="d"
        Title="Greate Option Trader"
        Height="450" Width="900"
        MinHeight="450" MinWidth="900">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Connector">
                <MenuItem Header="Connect" Command="{Binding Connect}"/>
            </MenuItem>
            <MenuItem Header="Группы">
                <MenuItem Header="создать" Command="{Binding CreateGroup}"/>
            </MenuItem>
        </Menu>

        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".7*"/>
                <ColumnDefinition Width="72" />
            </Grid.ColumnDefinitions>
            
            <DataGrid Grid.Column="0"
                      x:Name="dgInstrumentGroups"
                      Background="Transparent"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Containers}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Container.Name}" Width=".2*"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="OpenPnL" Binding="{Binding CurrencyOpenPnL}" Width="72"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="FixedPnL" Binding="{Binding FixedPnL}" Width="72"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Grid.Column="1" ItemsSource="{Binding ElementName=dgInstrumentGroups, Path=SelectedItem.Instruments}"
                      Background="Transparent" 
                      IsReadOnly="True"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Instrument.Name}" 
                                        Width="1*"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding Position.CurrentVolume}" 
                                        Width=".5*"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="Avg."
                                        Width=".5*"
                                        Binding="{Binding Position.AverageFilledPrice}"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                    <DataGridTextColumn Header="OpenPnL" Binding="{Binding Position.CurrencyOpenPnL}" 
                                        Width=".5*"
                                        ElementStyle="{StaticResource DataGridTextBlockStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <Button Content="запустить"
                    Height="32"
                    Style="{StaticResource BaseButtonStyle}"
                    Command="{Binding StartGroupCommand}"
                    CommandParameter="{Binding ElementName=dgInstrumentGroups, Path=SelectedItem}"/>

                <Button Content="изменить"
                    Height="32"
                    Command="{Binding EditInstrumentGroup}"
                    CommandParameter="{Binding ElementName=dgInstrumentGroups, Path=SelectedItem}"
                    Style="{StaticResource BaseButtonStyle}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
