<Window x:Class="GreatOptionTrader.Views.CreateStrategyContainerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreatOptionTrader.Views"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        
        mc:Ignorable="d"
        Title="CreateInstrumentGroupView"
        Height="450" Width="400"
        MinHeight="450" MinWidth="400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Grid Height="{StaticResource StackPanelElementHeight}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Style="{StaticResource BaseTextBlockStyle}"
                    Grid.Column="0" Text="name:"/>
                <TextBox 
                    Style="{StaticResource BaseTextBoxStyle}"
                    Grid.Column="1" x:Name="tbName"/>
            </Grid>

            <Grid Height="{StaticResource StackPanelElementHeight}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="account:"
                           Style="{StaticResource BaseTextBlockStyle}"/>
                <ComboBox Grid.Column="1" x:Name="cbAccounts" Style="{StaticResource BaseComboBoxStyle}"/>
            </Grid>

            <Grid Height="{StaticResource StackPanelElementHeight}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="option:"
                           Style="{StaticResource BaseTextBlockStyle}"/>
                <Label Grid.Column="1" x:Name="labSelectedOption"/>
                
                <Button Grid.Column="2" x:Name="btnRequest"
                        Click="requestclicked"
                        Style="{StaticResource BaseButtonStyle}" Content="+"/>
            </Grid>
        </StackPanel>

        <Button
            Style="{StaticResource BaseButtonStyle}"
            Content="create"
            Click="btnCreateClicked"
            Grid.Row="1"/>
    </Grid>
</Window>
