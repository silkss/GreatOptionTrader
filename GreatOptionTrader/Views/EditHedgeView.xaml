<Window x:Class="GreatOptionTrader.Views.EditHedgeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreatOptionTrader.Views"
        mc:Ignorable="d"
        Title="EditHedgeView" 
        MinHeight="450" MinWidth="700"
        Height="450"    Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="42"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding ElementName=lvHedges, Path=SelectedItem.Instrument.Name}"
                       Style="{StaticResource BaseTextBlockStyle}"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="SemiBold"/>
            
            <UniformGrid Grid.Column="1" Rows="1" x:Name="ugOrderParams">
                <TextBox x:Name="tbVoolume"
                    Text="{Binding Volume,Mode=TwoWay}"
                    Height="{StaticResource StackPanelElementHeight}"
                    Style="{StaticResource BaseTextBoxStyle}"/>

                <TextBox x:Name="tbPrice"
                    Text="{Binding Price,Mode=TwoWay}"
                    Height="{StaticResource StackPanelElementHeight}"
                    Style="{StaticResource BaseTextBoxStyle}"/>

                <ComboBox x:Name="cbTradeDireation" 
                    SelectedItem="{Binding Direction,Mode=TwoWay}"
                    ItemsSource="{Binding Source={StaticResource TradeDirectionToItemSource}}"
                    Height="{StaticResource StackPanelElementHeight}"
                    Style="{StaticResource BaseComboBoxStyle}"/>
            </UniformGrid>
        </Grid>

        <Button Grid.Row="1" Content="send order" Style="{StaticResource BaseButtonStyle}"
                Click="sendOrder"/>

        <ListView Grid.Row="2" x:Name="lvHedges"/>
    </Grid>
</Window>
