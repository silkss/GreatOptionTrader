<Window x:Class="Hedger.Views.EditHedgeContainerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hedger.Views"
        mc:Ignorable="d"
        Title="CreateHedgeContainerView" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="42"/>
        </Grid.RowDefinitions>

        <UniformGrid Grid.Row="0" Rows="1">
            <TextBlock Text="Базис для хеджа:" Style="{StaticResource BaseTextBlockStyle}"/>
            <TextBlock Style="{StaticResource BaseTextBlockStyle}">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1} {2} {3}">
                        <Binding Path="Hedge.Basis.Name" />
                        <Binding Path="Hedge.Basis.Symbol" />
                        <Binding Path="Hedge.Basis.Exchange" />
                        <Binding Path="Hedge.Basis.DaysToExpiration"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <UniformGrid Rows="1">
                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="Last price:"/>
                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding LastPrice}"/>
            </UniformGrid>
        </UniformGrid>

        <GroupBox Grid.Row="1" Header="Buy Levels"
                  Margin="{StaticResource BaseMargin}"
                  BorderBrush="DarkGray"
                  BorderThickness="2">
            <DataGrid x:Name="dgBuyHedgeLevels"
                      ItemsSource="{Binding Hedge.BuyLevels, Mode=TwoWay, UpdateSourceTrigger=Explicit}" />
        </GroupBox>
        
        <GroupBox Grid.Row="2" Header="Sell Levels"
                  Margin="{StaticResource BaseMargin}"
                  BorderBrush="DarkGray"
                  BorderThickness="2">
            
            <DataGrid x:Name="dgSellHedgeLevels"
                      ItemsSource="{Binding Hedge.SellLevels, Mode=TwoWay, UpdateSourceTrigger=Explicit}" />
        </GroupBox>
        
        <Button Grid.Row="3" Content="Update" Style="{StaticResource BaseButtonStyle}"
                Click="update"/>
    </Grid>
</Window>
